<body>
<div id="wrap">
  <div id="masthead">
    <h1>Sistema Financeiro de Supermecado - Mercado São Caetano</h1>
    <h2><a href="#">Perfil</a> | <a href="#">Contato</a> </h2>
  </div>
  <div id="menucontainer">
    <div id="menu">
      <ul>
        <li><%= link_to 'Inicio', ficheiros_path, class:"current" %></li>
        <li><%= link_to 'Cliente', clientes_path%></li>
        <li><%= link_to 'Funcionário', funcionarios_path %></li>
        <li><%= link_to 'Contas', contas_path %></li>
        <li><%= link_to 'Contas Atrasadas', '#' %></li>
      </ul>
    </div>
  </div>
  <div id="container">

    <div id="content">

      <% # formulario de cadastramento ..................................... %>
      <%= form_with model: @cliente, scope: :cliente, class:"formulario", local: true do |form| %>

        <span class="titulo_formulario">
					Cadastrar Cliente
				</span>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :nome, class:"label-elemento_formulario" %><br>
          <%= form.text_field :nome, class:"input100", placeholder:"Digite um nome" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :cpf, class:"label-elemento_formulario" %><br>
          <%= form.text_field :cpf, class:"input100", placeholder:"Digite um cpf" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :telefone, class:"label-elemento_formulario" %><br>
          <%= form.text_field :telefone, class:"input100", placeholder:"Digite um número de telefone" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :celular, class:"label-elemento_formulario" %><br>
          <%= form.text_field :celular, class:"input100", placeholder:"Digite um número de celular" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :email, class:"label-elemento_formulario" %><br>
          <%= form.text_field :email, class:"input100", placeholder:"Digite um e-mail (mínimo de 5 carecteres)" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :senha, class:"label-elemento_formulario" %><br>
          <%= form.text_field :senha, type:"password", class:"input100", placeholder:"Digite uma senha (mínimo de 5 carecteres)" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :cidade, class:"label-elemento_formulario" %><br>
          <%= form.text_field :cidade, class:"input100", placeholder:"Digite o nome de uma cidade/Estado" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :rua, class:"label-elemento_formulario" %><br>
          <%= form.text_field :rua, class:"input100", placeholder:"Digite o nome de uma Rua" %>
          <span class="focus-input100"></span>
        </div>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= form.label :numero, class:"label-elemento_formulario" %><br>
          <%= form.text_field :numero, class:"input100", placeholder:"Digite o número da casa" %>
          <span class="focus-input100"></span>
        </div>

        <% if(ClientesController.getClienteSalvo != "") %>
          <span id="resultadoPositivo" class="status_processo">
            <%= ClientesController.getClienteSalvo %>
          </span>
          <%ClientesController.setClienteSalvo("") %>
        <% end %>


        <div class="div_butao_formulario">
          <button class="botao_formulario">
						<span>
							Adicionar
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
          </button>
        </div>

      <% end %>

      <% # formulario de pesquisa ......................................... %>
      <%= form_tag(clientes_path, method: :get, class:"formulario formulario_pesquisa") do %>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= text_field_tag :pesquisa, nil, class:"input100", placeholder:"Pesquise por nome, cpf e id" %>
          <span class="focus-input100"></span>
        </div>

        <div class="div_butao_formulario" style="margin-top: -70px; margin-left: 380px">
          <button class="botao_tabela" style="height: 50px">
						<span>
							Pesquisar
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
          </button>
        </div>

      <% end %>

      <% # tabela de cadastramento..................................... %>
      <div class="col-12" >
        <div class="menuTabela col-10 offset-1 row" style="width: 525px;">
          <div class="left colunaTituloComum colunaIdFicheiro"> Id </div>
          <div class="left colunaTituloComum colunaNomeFicheiro"> Nome </div>
          <div class="left colunaTituloComum colunaCpfFicheiro"> Cpf </div>
        </div>

        <div style="height: 250px; width: 590px; overflow-y:auto; overflow-x:hidden;">
          <% @clientes.each do |cliente| %>
            <button>
              <div class="menuTabela" style="width: 525px; background: #ffffff; margin-left: -5px;">
                <div class="left colunaCorpoComum colunaIdFicheiro"> <%= cliente.id %> </div>
                <div class="left colunaCorpoComum colunaNomeFicheiro"> <%= cliente.nome %> </div>
                <div class="left colunaCorpoComum colunaCpfFicheiro"> <%= cliente.cpf %> </div>
              </div>
            </button>
          <% end %>
        </div>
      </div>

      <div class="col-12" style="margin-left: 51.6%; margin-top: -316.5px">
        <div class="menuTabela col-10 offset-1 row" style="width: 525px;">
          <div class="left col-1 colunaTituloComum colunaIdFicheiro"> Id </div>
          <div class="left col-5 colunaTituloComum colunaNomeFicheiro"> Nome </div>
          <div class="left col-3 colunaTituloComum colunaCpfFicheiro"> Cpf </div>
        </div>

        <div style="height: 250px; width: 590px; overflow-y:auto; overflow-x:hidden;">
          <% @funcionarios.each do |funcionario| %>
            <button>
              <div class="menuTabela col-10 offset-1 row pointer" style="width: 525px; background: #ffffff; margin-left: -5px;">
                <div class="left col-1 colunaCorpoComum colunaIdFicheiro"> <%= funcionario.id %> </div>
                <div class="left col-5 colunaCorpoComum colunaNomeFicheiro"> <%= funcionario.nome %> </div>
                <div class="left col-3 colunaCorpoComum colunaCpfFicheiro"> <%= funcionario.cpf %> </div>
              </div>
            </button>
          <% end %>
        </div>
      </div>

    </div>

  </div>
  <div id="footer"> Informações Sobre o Mercado </div>
</div>
</body>