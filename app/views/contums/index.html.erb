<body>
<div id="wrap">
  <div id="masthead">
    <h1>Sistema Financeiro de Supermecado - Mercado São Caetano</h1>
    <h2><a href="#">Perfil</a> | <a href="#">Contato</a> </h2>
  </div>
  <div id="menucontainer">
    <div id="menu">
      <ul>
        <li><%= link_to 'Inicio', new_conta_path %></li>
        <li><%= link_to 'Cliente', clientes_path%></li>
        <li><%= link_to 'Funcionário', funcionarios_path %></li>
        <li><%= link_to 'Contas', contas_path, class:"current" %></li>
      </ul>
    </div>
  </div>
  <div id="container">

    <div id="content">

      <span class="titulo_formulario">
					Contas
      </span>

      <% # formulario de pesquisa ......................................... %>
      <%= form_tag(contas_path, method: :get, class:"formulario formulario_pesquisa") do %>

        <div class="elemento_formulario quantidade_elemento_linha_formulario">
          <%= text_field_tag :pesquisa, nil, class:"input100", placeholder:"Pesquise por nome, cpf e id" %>
          <span class="focus-input100"></span>
        </div>

        <div class="div_butao_formulario" style="margin-top: -70px; margin-left: 380px">
          <button class="botao_tabela" style="height: 50px">
						<span>
							Pesquisar
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
          </button>
        </div>

      <% end %>

      <% # tabela de clientes..................................... %>
      <div class="col-12">
        <div class="menuTabela col-10 offset-1 row" style="width: 1133px;">
          <div class="left col-1 colunaTituloComum colunaId"> Id </div>
          <div class="left col-5 colunaTituloComum colunaNome"> Cliente </div>
          <div class="left col-3 colunaTituloComum colunaCpf"> Cpf </div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
        </div>

        <div style="height: 200px; overflow-y:auto; overflow-x:hidden; background: #eeeeee;">
          <% @clientes.each do |cliente| %>
            <div class="menuTabela col-10 offset-1 row" style="width: 1140px; margin-left: 10px; background: #eeeeee;">
              <div class="left col-1 colunaCorpoComum colunaId"> <%= cliente.id %> </div>
              <div class="left col-5 colunaCorpoComum colunaNome"> <%= cliente.nome %> </div>
              <div class="left col-3 colunaCorpoComum colunaCpf"> <%= cliente.cpf %> </div>
              <div class="left col-3" style="width: 20%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Contas', conta_path(cliente), class:"botao_tabela" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <span class="titulo_formulario">
					Contas Devendo
      </span>

      <% # tabela de contas devendo..................................... %>
      <div class="col-12">
        <div class="menuTabela col-10 offset-1 row" style="width: 1133px;">
          <div class="left col-1 colunaTituloComum colunaId"> Id </div>
          <div class="left col-5 colunaTituloComum colunaNome"> Data de Compra </div>
          <div class="left col-3 colunaTituloComum colunaCpf"> Valor </div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
        </div>

        <div style="height: 200px; overflow-y:auto; overflow-x:hidden; background: #eeeeee;">
          <% @contasDevendo.each do |conta| %>
            <div class="menuTabela col-10 offset-1 row" style="width: 1140px; margin-left: 10px; background: #eeeeee;">
              <div class="left col-1 colunaCorpoComum colunaId"> <%= conta.id %> </div>
              <div class="left col-5 colunaCorpoComum colunaNome"> <%= conta.dataCompra %> </div>
              <%if conta.juros > 0
                  conta.valor += (conta.juros/100) * conta.valor;
                end
              %>
              <div class="left col-3 colunaCorpoComum colunaCpf"> <%= conta.valor %> </div>
              <div class="left col-3" style="width: 10%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Editar', edit_conta_path(conta), class:"botao_tabela" %>
              </div>
              <div class="left col-3" style="width: 10%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Deletar', conta_path(conta), class:"botao_tabela",
                            method: :delete,
                            data: { confirm: 'Tem certeza que deseja excluir essa conta?' } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <span class="titulo_formulario">
					Contas Atrasadas
      </span>

      <% # tabela de contas atrazadas..................................... %>
      <div class="col-12">
        <div class="menuTabela col-10 offset-1 row" style="width: 1133px;">
          <div class="left col-1 colunaTituloComum colunaId"> Id </div>
          <div class="left col-5 colunaTituloComum colunaNome"> Data de Compra </div>
          <div class="left col-3 colunaTituloComum colunaCpf"> Valor da conta </div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
        </div>

        <div style="height: 200px; overflow-y:auto; overflow-x:hidden; background: #eeeeee;">
          <% @contasAtrasadas.each do |conta| %>
            <div class="menuTabela col-10 offset-1 row" style="width: 1140px; margin-left: 10px; background: #eeeeee;">
              <div class="left col-1 colunaCorpoComum colunaId"> <%= conta.id %> </div>
              <div class="left col-5 colunaCorpoComum colunaNome"> <%= conta.dataCompra %> </div>
              <%if conta.juros > 0
                  conta.valor += (conta.juros/100) * conta.valor;
                end
              %>
              <div class="left col-3 colunaCorpoComum colunaCpf"> <%= conta.valor %> </div>
              <div class="left col-3" style="width: 10%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Editar', edit_conta_path(conta), class:"botao_tabela" %>
              </div>
              <div class="left col-3" style="width: 10%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Deletar', conta_path(conta), class:"botao_tabela",
                            method: :delete,
                            data: { confirm: 'Tem certeza que deseja excluir essa conta?' } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <span class="titulo_formulario">
					Contas Pagas
      </span>

      <% # tabela de contas Pagas..................................... %>
      <div class="col-12">
        <div class="menuTabela col-10 offset-1 row" style="width: 1133px;">
          <div class="left col-1 colunaTituloComum colunaId"> Id </div>
          <div class="left col-5 colunaTituloComum colunaNome"> Data de Pagamento </div>
          <div class="left col-3 colunaTituloComum colunaCpf"> Valor da conta </div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
          <div class="left col-3 colunaTituloComum colunaId"></div>
        </div>

        <div style="height: 200px; overflow-y:auto; overflow-x:hidden; background: #eeeeee;">
          <% @contasPagas.each do |conta| %>
            <div class="menuTabela col-10 offset-1 row" style="width: 1140px; margin-left: 10px; background: #eeeeee;">
              <div class="left col-1 colunaCorpoComum colunaId"> <%= conta.id %> </div>
              <div class="left col-5 colunaCorpoComum colunaNome"> <%= conta.dataPagamento %> </div>
              <%if conta.juros > 0
                  conta.valor += (conta.juros/100) * conta.valor;
                end
              %>
              <div class="left col-3 colunaCorpoComum colunaCpf"> <%= conta.valor %> </div>
              <div class="left col-3" style="width: 10%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Editar', edit_conta_path(conta), class:"botao_tabela" %>
              </div>
              <div class="left col-3" style="width: 10%; font-size: 18px; margin-top: -20px;">
                <%= link_to 'Deletar', conta_path(conta), class:"botao_tabela",
                            method: :delete,
                            data: { confirm: 'Tem certeza que deseja excluir essa conta?' } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>
  <div id="footer"> Informações Sobre o Mercado </div>
</div>
</body>